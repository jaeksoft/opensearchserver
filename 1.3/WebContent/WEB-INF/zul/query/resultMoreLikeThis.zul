	<grid visible="@{resultMlt.resultExists}">
		<auxhead>
			<auxheader colspan="4" label="Summary" align="right">
				<button label="XML/HTTP API call" target="_blank"
					href="@{query.requestApiCall}" />
			</auxheader>
		</auxhead>
		<columns visible="false">
			<column width=" 20%" align="right" />
			<column width="30%" align="left" />
			<column width="20%" align="right" />
			<column width="30%" align="left" />
		</columns>
		<rows>
			<row spans="1,3">
				<label value="Query:" />
				<label value="@{resultMlt.result.request.query}" />
			</row>
			<row>
				<label value="Document(s) found:" />
				<label value="@{resultMlt.result.numFound}" />
				<label value="Time elapsed (ms):" />
				<label value="@{resultMlt.result.timer.duration}" />
			</row>
			<row>
				<label value="Start offset:" />
				<label value="@{resultMlt.result.request.start}" />
				<label value="Row(s) returned:" />
				<label value="@{resultMlt.result.request.rows}" />
			</row>
			<row></row>
		</rows>
	</grid>

	<separator />

	<include src="WEB-INF/zul/query/result/documents.zul" />

</window>